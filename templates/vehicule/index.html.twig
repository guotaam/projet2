{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-4 d-flex justify-content-evenly"> 

      <h1>AgenceSabaa ✅</h1>

  
{% for vehicule in vehicules %}
<div class="card" style="width: 18rem;">
<div class="card mb-3 f-s-4">
  <h3 class="card-header"> {{ vehicule.titre }} </h3>
  <h4 class="card-title text-center"> {{ vehicule.marque }}</h4>
  <div class="card-body text-center">
    <h5 class="card-title"> Modèle : {{ vehicule.modele }}</h5>
    <h5 class="card-title"> Prix Journalier {{ vehicule.prixjournalier }} € </h5>
    <p>  </p>
  </div>
  <div class="text-center">
    <img src="{{ vehicule.photo }}" alt="" width="50%" height="50%">
  </div>
  <div class="card-body">
  <p class="card-header"> Description : </p>
    <p class="card-text"> {{ vehicule.description }} </p>
  </div>
  <div class="card-body text-center">
    <a href="#" class="btn btn-success">Commander</a>
  </div>
  <div class="card-footer text-muted text-center">
    (Ecrit le {{ vehicule.dateenregistrement|date("d/m/Y à H:i:s") }})
  </div>
</div>
</div>
{% endfor %}


{% endblock %}
